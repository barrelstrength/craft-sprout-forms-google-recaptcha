    label: 'Site Key',
    instructions: 'Get the site key on your dashboard',
    id: 'googleRecaptchaSiteKey',
    name: 'googleRecaptchaSiteKey',
    required: true,
    errors: null,
    value: settings['googleRecaptchaSiteKey']})
}}

{{ forms.textField({
    label: 'Secret key',
    instructions: 'Get the secret key on your dashboard',
    id: 'googleRecaptchaSecretKey',
    name: 'googleRecaptchaSecretKey',
    type: 'password',
    required: true,
    value: settings['googleRecaptchaSecretKey']})
}}